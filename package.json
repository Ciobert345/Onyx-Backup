{
    "name": "electron-backend-system",
    "version": "1.0.0",
    "description": "Backend for Electron Desktop App (Backup/Sync/Scheduler)",
    "main": "src/main.js",
    "scripts": {
        "start": "electron src/main.js",
        "build-ui": "cd frontend && npm install && npm run build",
        "build": "npm run build-ui && npx electron-builder",
        "dist": "npm run build-ui && npx electron-builder --win",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "build": {
        "appId": "com.onyx.backup",
        "productName": "Onyx Backup",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "package.json",
            "frontend/dist/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.png"
        }
    },
    "dependencies": {
        "chokidar": "^3.6.0",
        "fs-extra": "^11.1.1",
        "googleapis": "^167.0.0",
        "minimatch": "^9.0.3",
        "mockery": "^2.1.0",
        "node-cron": "^3.0.3",
        "systeminformation": "^5.27.13",
        "winston": "^3.11.0"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12"
    }
}
